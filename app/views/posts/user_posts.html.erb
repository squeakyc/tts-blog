<div class="well">
  <h1>Posts by <% @username %></h1>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-6">
      <div class="container-fluid">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= post.title%> by <%link_to post.user.username, user_posts_path(user_id: post.user_id) %></h3>
          </div>
          <div class="panel-body">
            <b>by
              <%= image_tag asset_path(post.user.avatar), class: 'avatar'%>
              <%= link_to post.user.email %></b>
            <br>
            <%= post.blog_entry %>
          </div>
          <div class="panel-footer">
            <%= link_to 'Show', post_path(post), class: 'btn btn-primary' %>
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
            <% if current_user.id == post.user_id %>
              <%= link_to 'Destroy', post_path(post), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>


      <%= link_to 'New Post', new_post_path, class: 'btn btn-success', id: 'new-post-btn' %>
<br>
      <%= paginate @posts %>
